#%RAML 0.8

title: World Music API
baseUri: http://example.api.com/{version}
version: v1

/songs:
  get:
    responses:
      200:
        body:
          application/json:
            schema: !include songs.json
  /{songId}:
    post:
      body:
        application/json:
          schema: !include song.json
    get:
      responses:
        200:
          body:
            application/json:
              schema: !include song.json
    delete:
      description: |
        This method will *delete* an **individual song**