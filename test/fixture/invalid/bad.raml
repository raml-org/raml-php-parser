#%RAML 0.8

title: World Music API
baseUri: http://example.api.com/{version}
version: v1
traits:
  - paged:
      queryParameters:
        pages:
          description: The number of pages to return
          type: number
/songs:
  get:
    is: [ paged ]
    queryParameters:
      genre:
        description: filter the songs by genre
    responses:
        200:
          body:
            application/json:
              schema: !include nonexistantfile.json
